{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/admin",
        "http://localhost:3000/admin/registries",
        "http://localhost:3000/admin/settings"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 60}],
        "categories:accessibility": ["error", {"minScore": 90}],
        "categories:best-practices": ["warn", {"minScore": 85}],
        "categories:seo": ["warn", {"minScore": 80}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "max-potential-fid": ["error", {"maxNumericValue": 100}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "speed-index": ["warn", {"maxNumericValue": 3000}],
        "total-blocking-time": ["warn", {"maxNumericValue": 300}],
        "first-contentful-paint": ["warn", {"maxNumericValue": 1800}],
        "interactive": ["warn", {"maxNumericValue": 3500}],
        "server-response-time": ["error", {"maxNumericValue": 500}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}