  "target": "section",
  "stylesheet": "wishcraft-add-to-registry.css",
  "javascript": "wishcraft-registry.js",
  "settings": [
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show title",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Add to Registry"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show description",
      "default": true
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Save this item to your gift registry and share it with friends and family."
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Add to Registry"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Feature Options"
    },
    {
      "type": "checkbox",
      "id": "show_priority",
      "label": "Show priority selection",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_notes",
      "label": "Show notes field",
      "default": true
    },
    {
      "type": "header",
      "content": "Login Settings"
    },
    {
      "type": "textarea",
      "id": "login_message",
      "label": "Login message",
      "default": "Sign in to add items to your gift registry"
    },
    {
      "type": "text",
      "id": "login_button_text",
      "label": "Login button text",
      "default": "Sign In"
    }
  ]
}
{% endschema %}