# Production npm Configuration - Zero Warnings
# Suppress ALL warnings and notifications
update-notifier=false
loglevel=error
fund=false
audit=false
progress=false
prefer-offline=true
save-exact=true

# Suppress deprecation warnings
deprecation=false

# Force silent installation
silent=true

# Disable all optional features that can cause warnings
optional=false
shrinkwrap=false

# Set registry
registry=https://registry.npmjs.org/

# Enable package lock for deployments
package-lock=true

# Force color off for cleaner logs
color=false