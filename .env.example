# =============================================================================
# WISHCRAFT ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# 
# ⚠️  SECURITY WARNING:
# - Copy this file to .env and fill in your actual values
# - NEVER commit .env to version control
# - Use secure secret management in production (AWS Secrets Manager, etc.)
# - Run `npm run generate-secrets` to create secure random secrets
#
# =============================================================================

# SHOPIFY APP CONFIGURATION
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_APP_URL=https://your-app-url.com
SHOPIFY_API_VERSION=2025-07

# GENERATED SECRETS (run: npm run generate-secrets)
SESSION_SECRET=generate_with_script
JWT_SECRET=generate_with_script
ENCRYPTION_KEY=generate_with_script
ENCRYPTION_SALT=generate_with_script
DATA_ENCRYPTION_KEY=generate_with_script
DATA_ENCRYPTION_SALT=generate_with_script
SHOPIFY_WEBHOOK_SECRET=generate_with_script
CSRF_SECRET=generate_with_script

# DATABASE CONFIGURATION
DATABASE_URL=postgresql://user:password@localhost:5432/wishcraft
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_QUERY_TIMEOUT=30000

# REDIS CONFIGURATION (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600
REDIS_RATE_LIMIT_WINDOW=60000

# ENVIRONMENT SETTINGS
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# PERFORMANCE MONITORING
ENABLE_PERFORMANCE_MONITORING=true
WEB_VITALS_ENDPOINT=/api/performance/vitals
PERFORMANCE_SAMPLE_RATE=0.1

# FEATURE FLAGS
FEATURE_CIRCUIT_BREAKER_ENABLED=true
FEATURE_CACHE_ENABLED=true
FEATURE_GDPR_COMPLIANCE=true

# CIRCUIT BREAKER SETTINGS
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# RATE LIMITING
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# GDPR COMPLIANCE
DATA_RETENTION_DAYS=730
ENABLE_AUDIT_LOGGING=true
ENABLE_CONSENT_MANAGEMENT=true

# MONITORING & OBSERVABILITY
SENTRY_DSN=your_sentry_dsn_here
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
ENABLE_TRACING=true