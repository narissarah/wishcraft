# WishCraft Environment Variables Example
# Copy this file to .env and fill in your actual values

# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_from_partner_dashboard
SHOPIFY_API_SECRET=your_api_secret_from_partner_dashboard
SHOPIFY_SCOPES=read_customers,write_customers,read_products,read_orders,write_orders,read_inventory,write_content

# App URL (will be set by deployment platform)
SHOPIFY_APP_URL=https://your-app-domain.com

# Database URL (provided by your hosting platform)
DATABASE_URL=postgresql://user:password@host:port/database

# Security Keys (generate secure random strings)
SESSION_SECRET=generate_32_char_random_string
JWT_SECRET=generate_32_char_random_string
ENCRYPTION_KEY=generate_32_char_random_string

# Environment
NODE_ENV=development
PORT=3000

# Optional Services
REDIS_URL=redis://localhost:6379
SENTRY_DSN=your_sentry_dsn_if_using_error_tracking