# WishCraft Environment Variables
# Copy this file to .env and fill in your actual values

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_APP_URL=https://your-app.vercel.app
SHOPIFY_SCOPES=read_customers,read_products,read_orders,write_orders,read_inventory

# Database Configuration (Neon)
# Use the pooled connection for better performance in serverless
DATABASE_URL=postgresql://username:password@hostname-pooler.region.aws.neon.tech/database_name?sslmode=require

# Security
SESSION_SECRET=your_32_character_session_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
SEARCH_HASH_KEY=your_32_character_search_hash_key_here

# Environment
NODE_ENV=production