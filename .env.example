# =============================================================================
# SHOPIFY APP CONFIGURATION
# =============================================================================

# App credentials from Partner Dashboard
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# App permissions for gift registry functionality (COMPLIANCE: Minimal scopes matching shopify.app.toml)
SHOPIFY_SCOPES=read_customers,read_orders,write_orders,read_products,read_inventory,write_metaobjects

# App URL (automatically set by Shopify CLI in development)
SHOPIFY_APP_URL=https://your-tunnel-url.dev

# Webhook secret for signature verification
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL database URL for development
DATABASE_URL=postgresql://username:password@localhost:5432/wishcraft

# For production deployment (connection pooling)
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database

# =============================================================================
# ENVIRONMENT & SECURITY
# =============================================================================

# Environment type
NODE_ENV=development
PORT=3000

# Session secret for encryption (generate with: openssl rand -base64 32)
SESSION_SECRET=generate_with_openssl_rand_base64_32_minimum_32_chars

# JWT secret for API authentication (generate with: openssl rand -base64 32)
JWT_SECRET=generate_with_openssl_rand_base64_32_minimum_32_chars

# Encryption key for sensitive data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=generate_with_openssl_rand_base64_32_minimum_32_chars

# Security settings
FORCE_HTTPS=true
ENABLE_AUDIT_LOGGING=true
COOKIE_DOMAIN=.wishcraft.app

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email service configuration (for registry sharing)
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@yourstore.com

# Alternative email services
MAILGUN_API_KEY=your_mailgun_key
MAILGUN_DOMAIN=mg.yourstore.com

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Disable CLI analytics (optional)
SHOPIFY_CLI_NO_ANALYTICS=1

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features for gradual rollout
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EMAIL_SHARING_ENABLED=true
FEATURE_GROUP_GIFTING_ENABLED=true
FEATURE_SOCIAL_SHARING_ENABLED=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development store URL
DEV_STORE_URL=your-dev-store.myshopify.com

# Enable debug logging
DEBUG=true
LOG_LEVEL=debug

# Redis for development caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# CDN URL for static assets (production)
CDN_URL=https://cdn.yourstore.com

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000