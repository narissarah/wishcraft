{
  "name": "wishcraft",
  "version": "1.0.0",
  "description": "WishCraft - Shopify Gift Registry App",
  "scripts": {
    "build": "remix build",
    "dev": "shopify app dev",
    "prestart": "node scripts/check-env.js || true",
    "start": "node server.js",
    "dev:setup": "./scripts/dev-setup.sh",
    "config:link": "shopify app config link",
    "config:use": "shopify app config use",
    "deploy": "shopify app deploy",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:generate": "prisma generate",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "vitest run test/performance",
    "test:security": "vitest run test/security",
    "test:responsive": "playwright test test/responsive",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security && npm run test:responsive",
    "lint": "eslint app",
    "lint:fix": "eslint app --fix",
    "analyze": "ANALYZE=true npm run build",
    "bundle:analyze": "npm run build && npx bundle-analyzer build/client",
    "size": "size-limit",
    "performance:audit": "lighthouse http://localhost:3000 --only-categories=performance --output=json --output-path=./lighthouse-report.json",
    "performance:report": "node scripts/performance-report.js",
    "performance:alerts": "node scripts/performance-alerts.js",
    "performance:budget": "node scripts/performance-budget.js",
    "performance:regression": "vitest run test/performance --reporter=json --outputFile=performance-regression.json",
    "bundle:check": "node scripts/performance-budget.js",
    "lighthouse:ci": "lhci autorun",
    "compliance:check": "node scripts/compliance-checker.js",
    "compliance:report": "node scripts/generate-compliance-report.js",
    "build:health-check": "node scripts/build-health-check.js check",
    "build:status": "node scripts/build-health-check.js status",
    "build:reset-metrics": "node scripts/build-health-check.js reset",
    "build:reliable": "npm run build:health-check && npm run build",
    "deploy:production": "node deploy/production-deploy.js production",
    "deploy:staging": "node deploy/production-deploy.js staging",
    "deploy:dry-run": "node deploy/production-deploy.js production railway --dry-run",
    "backup:full": "./deploy/backup.sh full",
    "backup:schema": "./deploy/backup.sh schema",
    "health:check": "curl -f http://localhost:3000/health && curl -f http://localhost:3000/health/db"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@remix-run/express": "^2.16.8",
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@remix-run/serve": "^2.16.8",
    "@sentry/node": "^9.35.0",
    "@sentry/profiling-node": "^9.35.0",
    "@shopify/app-bridge": "^3.7.10",
    "@shopify/app-bridge-react": "^3.7.10",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-app-remix": "^3.3.0",
    "@shopify/shopify-app-session-storage-prisma": "^4.0.5",
    "@types/dompurify": "^3.0.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "isomorphic-dompurify": "^2.26.0",
    "lru-cache": "^10.2.0",
    "node-cron": "^4.2.0",
    "node-statsd": "^0.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-ui-dist": "^4.15.5",
    "web-vitals": "^3.5.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.40.0",
    "@remix-run/dev": "^2.16.8",
    "@remix-run/testing": "^2.16.8",
    "@shopify/app-bridge-types": "^0.0.4",
    "@size-limit/preset-app": "^11.0.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/gtag.js": "^0.0.20",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^2.1.8",
    "bundlesize": "^0.18.2",
    "chalk": "^5.4.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "jsdom": "^26.0.0",
    "lighthouse": "^12.7.1",
    "node-mocks-http": "^1.14.1",
    "prisma": "^5.22.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "size-limit": "^11.0.2",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.3",
    "ws": "^8.16.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.20.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-musl": "4.9.5"
  },
  "main": "eslint.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
