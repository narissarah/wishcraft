# Production Environment Variables for WishCraft
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/wishcraft_production?schema=public&pool_timeout=0"

# Shopify App Configuration
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_APP_URL="https://your-app-domain.com"
SHOPIFY_SCOPES="read_customers,write_orders,read_products,write_products,read_themes,write_themes"
SHOPIFY_WEBHOOK_SECRET="your-webhook-secret"

# Security Configuration (generate these with: openssl rand -hex 32)
SESSION_SECRET="generate-a-secure-random-string-at-least-32-chars"
ENCRYPTION_KEY="generate-a-secure-random-string-at-least-32-chars"
CSRF_SECRET="generate-a-secure-random-string-at-least-32-chars"

# Redis Configuration (optional, for caching)
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED="false"

# Email Configuration
EMAIL_PROVIDER="smtp"
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# Application Configuration
NODE_ENV="production"
PORT="3000"
HOST="0.0.0.0"

# Monitoring Configuration
MONITORING_ENABLED="true"
P95_MONITORING_ENABLED="true"
ALERTING_ENABLED="true"

# Feature Flags
ENABLE_CRON_JOBS="true"
ENABLE_WEBHOOKS="true"

# Deployment Platform Configuration
# For Railway
RAILWAY_STATIC_URL=""
# For Render
RENDER_EXTERNAL_URL=""
# For Fly.io
FLY_APP_NAME=""