# WishCraft Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===== SHOPIFY CONFIGURATION =====
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_API_VERSION=2025-01
SCOPES=read_products,write_products,read_customers,write_customers,read_orders,write_orders
HOST=https://your-app-domain.com
SHOPIFY_APP_URL=https://your-app-domain.com

# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string for production
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# ===== SECURITY CONFIGURATION =====
# Generate with: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# ===== REDIS CONFIGURATION =====
# For session storage and caching
REDIS_URL=redis://username:password@host:port

# ===== CDN AND STORAGE =====
CDN_URL=https://cdn.your-domain.com
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket

# ===== MONITORING AND LOGGING =====
# Datadog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic (alternative to Datadog)
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
NEW_RELIC_APP_NAME=WishCraft Production

# ===== NOTIFICATION SERVICES =====
# Slack for deployment notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Email service (SendGrid, Mailgun, etc.)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@your-domain.com

# ===== PERFORMANCE MONITORING =====
# Performance webhook for alerts
PERFORMANCE_WEBHOOK_URL=https://your-performance-webhook-url

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===== BACKUP CONFIGURATION =====
# S3 for database backups
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-west-2

# ===== SEARCH AND ANALYTICS =====
# Elasticsearch (if using)
ELASTICSEARCH_URL=https://your-elasticsearch-url

# ===== THIRD-PARTY INTEGRATIONS =====
# Stripe for payments (if needed)
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Twilio for SMS (if needed)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# ===== FEATURE FLAGS =====
# Environment-specific feature toggles
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_OFFLINE_SUPPORT=true
ENABLE_PUSH_NOTIFICATIONS=false

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=https://admin.shopify.com,https://*.myshopify.com

# ===== SSL AND SECURITY =====
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb

# ===== DEPLOYMENT CONFIGURATION =====
# Platform-specific variables
RAILWAY_ENVIRONMENT=production
RENDER_SERVICE_ID=your_render_service_id

# Build configuration
GENERATE_SOURCEMAP=false
BUNDLE_ANALYZER=false

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ===== CACHE CONFIGURATION =====
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# ===== WEBHOOK CONFIGURATION =====
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# ===== DATABASE POOL CONFIGURATION =====
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=600000