[
  {
    "name": "Client Bundle",
    "path": "build/client/**/*.js",
    "limit": "150 KB",
    "gzip": true,
    "webpack": false
  },
  {
    "name": "Vendor React",
    "path": "build/client/assets/vendor-react*.js",
    "limit": "50 KB",
    "gzip": true
  },
  {
    "name": "Vendor Shopify",
    "path": "build/client/assets/vendor-shopify*.js",
    "limit": "80 KB",
    "gzip": true
  },
  {
    "name": "Critical CSS",
    "path": "build/client/**/*.css",
    "limit": "20 KB",
    "gzip": true
  },
  {
    "name": "Charts Bundle (lazy)",
    "path": "build/client/assets/charts*.js",
    "limit": "100 KB",
    "gzip": true
  },
  {
    "name": "Total Initial Load",
    "path": [
      "build/client/assets/vendor-react*.js",
      "build/client/assets/vendor-shopify*.js",
      "build/client/entry.client*.js",
      "build/client/**/*.css"
    ],
    "limit": "200 KB",
    "gzip": true
  }
]